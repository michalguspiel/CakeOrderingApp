<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CakeOrderingApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryVariant">@color/pink_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/pink_700</item>
        <!-- Customize your theme here. -->

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.CakeOrderingApp.Test" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryVariant">@color/pink_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:statusBarColor">@color/pink_700</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="SignikaTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/signika_regular</item>
    </style>

    <style name="SignikaButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/signika_bold</item>
    </style>

    <style name="AppTheme" parent="Theme.CakeOrderingApp">
        <item name="android:fontFamily">@font/signika_regular</item>
        <item name="android:textViewStyle">@style/SignikaTextViewStyle</item>
        <item name="android:buttonStyle">@style/SignikaButtonStyle</item>
    </style>

</resources>