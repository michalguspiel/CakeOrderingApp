<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_orders_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/admin_order_item_timestamp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="2021-01-10 18:01" />

            <TextView
                android:id="@+id/admin_order_item_status"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Active" />

            <TextView
                android:id="@+id/admin_order_item_price"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="39.99â‚¬" />

            <TextView
                android:id="@+id/admin_order_item_delivery_method"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Elves prepaid delivery"

                app:layout_constraintVertical_bias="0.49" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/admin_order_item_user_id"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                tools:text="Ordered by Gordon Ramsay."/>

            <TextView
                android:id="@+id/admin_order_item_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16dp"
                tools:text="Suurpelto 112141 Espoo" />


        </LinearLayout>

        <ListView
            android:id="@+id/admin_order_item_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:layoutAnimation="@anim/layout_animation"
            >

        </ListView>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/pink_000" />

        <TextView
            android:id="@+id/admin_order_item_mark_as_completed_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Mark as completed"
            android:textAllCaps="true"
            android:textColor="@color/pink_500"
            android:textSize="12sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/pink_000" />

    </LinearLayout>

</androidx.cardview.widget.CardView>